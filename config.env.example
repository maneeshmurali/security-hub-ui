# =============================================================================
# AWS Security Hub Dashboard - Production Configuration Template
# =============================================================================
# Copy this file to .env and customize the values for your environment
# cp config.env.example .env

# AWS Configuration
# =================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# S3 Configuration (Optional - for backup/export)
# ===============================================
S3_BUCKET_NAME=
S3_PREFIX=security-hub-backups/

# Database Configuration
# =====================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/security_hub
POSTGRES_DB=security_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Application Settings
# ===================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Polling and Scheduling
# =====================
POLLING_INTERVAL_MINUTES=1440  # 24 hours
ENABLE_MULTI_REGION=true
MAX_REGIONS=0  # 0 = no limit (all regions)
MAX_PAGES_PER_REGION=50
ENABLE_MULTI_REGION=true

# Security and Performance
# =======================
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "*"]

# Redis Configuration (for caching)
# =================================
REDIS_URL=redis://redis:6379/0

# Container Configuration
# ======================
DOCKER_COMPOSE_PROJECT_NAME=security-hub-ui

# Monitoring and Logging
# =====================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_RETENTION_DAYS=30

# Feature Flags
# ============
ENABLE_COMMENTS=true
ENABLE_HISTORY_TRACKING=true
ENABLE_EXPORT_FEATURES=true
ENABLE_S3_BACKUP=false

# API Rate Limiting
# =================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Timeout Settings
# ===============
AWS_TIMEOUT_SECONDS=60
DATABASE_TIMEOUT_SECONDS=30
API_TIMEOUT_SECONDS=300

# Backup and Recovery
# ===================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. For production, change SECRET_KEY to a strong random string
# 2. Set AWS credentials via IAM role (recommended) or environment variables
# 3. Configure S3_BUCKET_NAME if you want backup/export functionality
# 4. Adjust POLLING_INTERVAL_MINUTES based on your needs (default: 24 hours)
# 5. Set MAX_REGIONS to limit regions if needed (0 = all regions)
# 6. Enable S3 backup by setting BACKUP_ENABLED=true and S3_BUCKET_NAME
# ============================================================================= 